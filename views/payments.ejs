<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Statistiques des Paiements - Telegram Bot</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <%- include('partials/header') %>
    <%- include('partials/nav') %>

    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-icon">üí∞</div>
        <div class="stat-info">
          <h3><%= paymentStats.totalPayments %></h3>
          <p>Total Achats</p>
        </div>
      </div>

      <div class="stat-card">
        <div class="stat-icon">‚≠ê</div>
        <div class="stat-info">
          <h3><%= paymentStats.totalRevenue %></h3>
          <p>Revenue (Stars)</p>
        </div>
      </div>
    </div>

    <div class="section">
      <h2>üí≥ Achats R√©cents</h2>
      <div class="payments-list">
        <% if (paymentStats.recentPayments && paymentStats.recentPayments.length > 0) { %>
          <table class="payments-table">
            <thead>
              <tr>
                <th>User ID</th>
                <th>Fichier</th>
                <th>Montant</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% paymentStats.recentPayments.forEach(payment => { %>
                <tr>
                  <td><%= payment.user_id %></td>
                  <td><%= payment.file %></td>
                  <td>‚≠ê <%= payment.amount %> Stars</td>
                  <td><%= new Date(payment.timestamp).toLocaleString('fr-FR') %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        <% } else { %>
          <p class="no-data">Aucun paiement enregistr√©</p>
        <% } %>
      </div>
    </div>
  </div>
</body>
</html>
