# ============================================
# TELEGRAM USERBOT CONFIGURATION
# ============================================
# Get these from: https://my.telegram.org/auth
# WARNING: Never share these credentials!

TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE_NUMBER=+33612345678
TELEGRAM_SESSION_STRING=your_session_string_here

# ============================================
# PAYMENT BOT CONFIGURATION
# ============================================
# Create a bot with @BotFather on Telegram

TELEGRAM_PAYMENT_BOT_TOKEN=your_bot_token_here
TELEGRAM_PAYMENT_BOT_USERNAME=YourBotUsername

# ============================================
# DATABASE
# ============================================
# Railway provides MongoDB - use the MongoDB database plugin
# Or use external MongoDB Atlas

MONGO_URI=mongodb://localhost:27017/telegram_bot

# ============================================
# AI CONFIGURATION
# ============================================
# Get from: https://openrouter.ai/

OPENROUTER_API_KEY=your_openrouter_api_key_here

# Alternative AI provider (optional)
GROQ_API_KEY=your_groq_api_key_here

# ============================================
# ADMIN PANEL
# ============================================

ADMIN_PASSWORD=your_secure_admin_password

# ============================================
# RAILWAY CONFIGURATION
# ============================================
# Railway automatically sets PORT - do not override
# PORT=5000
